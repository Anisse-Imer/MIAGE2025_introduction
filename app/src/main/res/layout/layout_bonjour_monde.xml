<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BonjourMonde">

    <EditText
        android:id="@+id/id_login_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/id_pwd_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/id_login_editext"
        tools:layout_editor_absoluteX="100dp" />

    <Button
        android:id="@+id/id_switch_secondary_page_button"
        android:layout_width="261dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:text="switch_secondary_layout "
        app:layout_constraintTop_toBottomOf="@+id/id_pwd_editext"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/id_thirdactivity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Switch third activity"
        app:layout_constraintTop_toBottomOf="@+id/id_switch_secondary_page_button"
        tools:layout_editor_absoluteX="96dp" />

</androidx.constraintlayout.widget.ConstraintLayout>